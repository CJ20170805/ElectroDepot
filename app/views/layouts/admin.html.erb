<!DOCTYPE html>
<html>
<head>
  <title>ElectroDepot Admin</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_pack_tag 'application' %>
</head>
<body>
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">ElectroDepot Admin</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to 'Dashboard', admin_root_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'Products', admin_products_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'Orders', admin_orders_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'Users', admin_users_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'Categories', admin_categories_path, class: 'nav-link' %></li>
        </ul>
      </div>
    </nav>
    <div class="content mt-4">
      <%= yield %>
    </div>
  </div>
</body>
</html>
