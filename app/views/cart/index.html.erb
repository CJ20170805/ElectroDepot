<!-- app/views/cart/index.html.erb -->

<h1>Your Cart</h1>

<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item[:product].name %></td>
          <td>
            <%= form_with url: update_quantity_cart_index_path, method: :patch, local: true do |form| %>
              <%= form.hidden_field :product_id, value: cart_item[:product].id %>
              <%= form.number_field :quantity, value: cart_item[:quantity], min: 1 %>
              <%= form.submit "Update", class: "btn btn-secondary" %>
            <% end %>
          </td>
          <td>
            <%= link_to "Remove", remove_cart_index_path(product_id: cart_item[:product].id), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "Continue Shopping", products_path, class: "btn btn-primary" %>
<%= link_to "Checkout", new_order_path, class: "btn btn-success" %>
